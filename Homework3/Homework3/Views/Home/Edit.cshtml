@model List<Product>

<h2>Product List</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Picture</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Discount</td>
                <td><img src="@product.PictureUrl" alt="Product Image" width="50" height="50" /></td>
                <td><a asp-action="Edit" asp-route-id="@product.Id">Edit</a></td>
                <td><a asp-action="Remove" asp-route-id="@product.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add">Add Product</a>
