@model Product

<h2>Add Product</h2>

<form asp-action="Add" method="post">
    <label>Name:</label>
    <input asp-for="Name" />
    <br />
    <label>Description:</label>
    <input asp-for="Description" />
    <br />
    <label>Price:</label>
    <input asp-for="Price" />
    <br />
    <label>Discount:</label>
    <input asp-for="Discount" />
    <br />
    <label>Picture URL:</label>
    <input asp-for="PictureUrl" />
    <br />
    <input type="submit" value="Add" />
</form>
